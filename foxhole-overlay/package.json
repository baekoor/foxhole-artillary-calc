{
  "name": "foxhole-overlay",
  "version": "1.0.0",
  "description": "Foxhole Artillery Calculator Overlay - Always-on-top calculator for Foxhole",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && node -e \"require('fs').copyFileSync('src/overlay.html', 'dist/overlay.html')\"",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "clean": "rimraf dist"
  },
  "keywords": [
    "foxhole",
    "overlay",
    "artillery",
    "calculator"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "ps-list": "^9.0.0"
  },
  "build": {
    "appId": "com.foxhole.overlay",
    "productName": "Foxhole Overlay",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Foxhole Overlay"
    }
  }
}
